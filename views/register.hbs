<div class="container my-5">
  <div class="jumbotron">

    <h1>FORMULARIO DE REGISTRO DE NUEVOS USUARIOS</h1>
    <br />
    <form
      class="form"
      action="/register"
      method="post"
      role="form"
      autocomplete="off"
    >

      <div class="form-group">
        <input
          id="username "
          name="username"
          placeholder="e-mail este será tu usuario"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="email"
          name="email"
          placeholder="Confirma tu e-mail"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="password"
          name="password"
          placeholder="Password"
          class="form-control"
          type="password"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="=password2"
          name="=password2"
          placeholder="Confirma tu password"
          class="form-control"
          type="password"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="nombre"
          name="nombre"
          placeholder="Nombre"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="apellido"
          name="apellido"
          placeholder="Apellido"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="dni"
          name="dni"
          placeholder="Número de D.N.I."
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="calle"
          name="calle"
          placeholder="Calle"
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="altura"
          name="altura"
          placeholder="Altura / numero"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="pisoDpto"
          name="pisoDpto"
          placeholder="Piso / dpto."
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="localidad"
          name="localidad"
          placeholder="Localidad"
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="cp"
          name="cp"
          placeholder="C.P."
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="provincia"
          name="provincia"
          placeholder="Provincia"
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="telefono"
          name="telefono"
          placeholder="Telefono"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Registrarse" />
      </div>
    </form>

    <hr />

    <div class="text-left">
      <button
        class="btn btn-success my-3"
        onclick="location.href = '/login'"
      >Volver al Login</button>
    </div>

  </div>
</div>