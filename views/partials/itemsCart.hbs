{{#if listExists}}
  {{#each suggestedChamps}}

    <div class="card-body p-4">
      <div class="row align-items-center">
        <div class="col-md-3 col-lg-3 col-xl-3">
          <p class="lead fw-normal mb-2">ProductID: {{this.id}}</p>
        </div>
        <div class="col-md-2 col-lg-2 col-xl-2">
          <img
            src="{{this.image}}"
            alt="se esperaba una imagen"
            class="img-fluid rounded-3"
          />
        </div>
        <div class="col-md-3 col-lg-3 col-xl-3">
          <p class="lead fw-normal mb-2">{{this.title}}</p>
        </div>

        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
          <h5 class="mb-0">${{this.price}}</h5>
        </div>
        <div class="col-md-1 col-lg-1 col-xl-1 text-end">
          <form
            action="/carrito/{{this.cartUserId}}/item/{{this.id}}"
            method="POST"
          >
            <button
              type="submit"
              class="btn btnDel btn-outline-dark btn-danger"
            >X</button>
          </form>
        </div>
      </div>
    </div>

  {{/each}}
{{/if}}